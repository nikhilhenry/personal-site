{
  "routes": [
    {
      "src": "/api/hello",
      "dest": "/api/hello.py"
    }
  ],
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": [".nuxt/content/**", "content/**"],
        "generateStaticRoutes" : true
      }
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python",
      "config":{
        "serverFiles":["api/**"],
        "excludeFiles":["**/!(.py)"]
      }
    }
  ]
}
